<Window x:Class="Layer_UI.Planlama_Ortak.Plan_Takip_No.Frm_Talep_Hesaplat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Frm_Talep_Hesaplat" Height="150" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical">
        <Button x:Name="btn_talep_hesaplat" 
                Click="btn_talep_hesaplat_clicked"
                Content="Hesapla"
                Background="LimeGreen"
                Width="80"
                Height="30"
                    Margin="0 10 0 0 "
                    Style="{StaticResource ButtonItemPopUpStyle}"></Button>
            <TextBox x:Name="txt_please_wait"
                 Text="Hesaplanıyor..."
                     Margin="0 10 0 0"
                     Visibility="Collapsed"
                 Style="{StaticResource TextBoxStyle431_12}"
                     />
        </StackPanel>
    </Grid>
</Window>
