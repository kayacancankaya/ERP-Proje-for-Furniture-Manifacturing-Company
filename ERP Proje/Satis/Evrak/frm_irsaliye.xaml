                                                              Width="150"
                                                              Height="16"
                                                              Padding="2 0 0 0"
                                                              HorizontalAlignment="Left"
                                                              VerticalAlignment="Center"
                                                              Margin="4 0 0 0"
                                                              x:Name="txt_sofor_tel"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="TC No:"
                                                                       Style="{StaticResource TextBlockStylePdf}"
                                                                       TextAlignment="Right"
                                                                       Padding="3"
                                                                       Width="120"/>
                                    <TextBox  Text="{Binding SoforTC, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
