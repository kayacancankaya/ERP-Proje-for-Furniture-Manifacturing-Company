                                                                      Style="{StaticResource TextBoxStyle1}"
                                                                      Width="150"
                                                                      Height="16"
                                                                      Padding="2 0 0 0"
                                                                      HorizontalAlignment="Left"
                                                                      VerticalAlignment="Center"
