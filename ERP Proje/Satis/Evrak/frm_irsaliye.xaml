                                                                      Width="100"
                                                                      Height="16"
                                                                      Padding="2 0 0 0"
                                                                      HorizontalAlignment="Left"
                                                                      VerticalAlignment="Center"
                                                                      Margin="4 0 0 0"
                                                                      x:Name="txt_arac_plaka2"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Tel:"
                                                               Style="{StaticResource TextBlockStylePdf}"
                                                               TextAlignment="Right"
