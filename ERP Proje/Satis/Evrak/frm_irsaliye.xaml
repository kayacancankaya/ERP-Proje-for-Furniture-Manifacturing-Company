                                                                      HorizontalAlignment="Left"
                                                                      VerticalAlignment="Center"
                                                                      Margin="4 0 0 0"
                                                                      x:Name="txt_tc_no"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Konteyner No:"
                                                                       Style="{StaticResource TextBlockStylePdf}"
                                                                       TextAlignment="Right"
                                                                       Padding="3"
                                                                       Width="120"/>
