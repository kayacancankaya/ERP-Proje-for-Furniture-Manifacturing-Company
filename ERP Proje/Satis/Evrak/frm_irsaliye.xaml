                                                                      Height="16"
                                                                      Padding="2 0 0 0"
                                                                      HorizontalAlignment="Left"
                                                                      VerticalAlignment="Center"
                                                                      Margin="4 0 0 0"
                                                                      x:Name="txt_muhur"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Teslimat Limanı:"
                                                                       Style="{StaticResource TextBlockStylePdf}"
                                                                       TextAlignment="Right"
                                                                       Padding="3"
                                                                       Width="120"/>
                                    <TextBox  Text="{Binding TeslimatLiman, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                                      Style="{StaticResource TextBoxStyle1}"
                                                                      Width="150"
                                                                      Height="16"
                                                                      Padding="2 0 0 0"
                                                                      HorizontalAlignment="Left"
                                                                      VerticalAlignment="Center"
                                                                      Margin="4 0 0 0"
                                                                      x:Name="txt_teslimat_limani"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
