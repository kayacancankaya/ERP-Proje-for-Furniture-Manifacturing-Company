                          Height="auto"
                          x:Name="grd_pdf"
                          DataContext="{StaticResource vm_Irsaliye}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="90"/>
                            <RowDefinition Height="3"/>
                            <RowDefinition Height="140"/>
                            <RowDefinition Height="3"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="3"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="180"/>
                            <RowDefinition Height="3"/>
                        </Grid.RowDefinitions>

                        <Image  Source="\\192.168.1.11\\Vitabianca\17-Güncel_Planlar\Images\vb.png" Grid.Column="3" HorizontalAlignment="Right"/>
                            <StackPanel Orientation="Vertical"
                                        Grid.Column="1" Grid.ColumnSpan="1"
                                        >
                                    <TextBlock  Text="Vita Bianca Ltd.Şti."
                                       Style="{StaticResource TextBlockStylePdf}"
                                       HorizontalAlignment="Center"
                                       FontSize="24"
                                       Padding="3 10 3 3"/>
                                    <TextBlock  Text="Pancar OSB Mahallesi 5. Cadde No:2"
                                       Style="{StaticResource TextBlockStylePdf}"
                                       HorizontalAlignment="Center"
                                       Padding="3"/>
                                    <TextBlock  Text="Torbalı/İzmir/Türkiye"
                                       Style="{StaticResource TextBlockStylePdf}"
                                       HorizontalAlignment="Center"
                                       Padding="3"/>
                                </StackPanel>
                            <Border Background="{StaticResource b_r_four}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"/>
                            <StackPanel Orientation="Vertical" Grid.Row="2"
                                            Grid.Column="0" Grid.ColumnSpan="2"
                                            VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Şirket Adı:"
                                                   Style="{StaticResource TextBlockStylePdf}"
                                                   TextAlignment="Right"
                                                   Padding="3"
                                                   Width="120"/>
                                        <TextBox  Text="{Binding SirketAdi, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                  Style="{StaticResource TextBoxStyle1}"
                                                  Width="250"
                                                  Height="16"
                                                  Padding="2 0 0 0"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Margin="4 0 0 0"
                                                  x:Name="txt_sirket_adi"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Adres:"
                                                   Style="{StaticResource TextBlockStylePdf}"
                                                   TextAlignment="Right"
                                                   Padding="3"
                                                   Width="120"/>
                                            <TextBox  Text="{Binding Adres, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                          Style="{StaticResource TextBoxStyle1}"
                                                          Width="250"
                                                          Height="16"
                                                          Padding="2 0 0 0"
                                                          HorizontalAlignment="Left"
                                                          VerticalAlignment="Center"
                                                          Margin="4 0 0 0"
                                                          x:Name="txt_adres"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Satır 2:"
                                                   Style="{StaticResource TextBlockStylePdf}"
                                                   TextAlignment="Right"
                                                   Padding="3"
                                                   Width="120"/>
                                            <TextBox  Text="{Binding Adres2, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                  Style="{StaticResource TextBoxStyle1}"
                                                  Width="250"
                                                  Height="16"
                                                  Padding="2 0 0 0"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Margin="4 0 0 0"
                                                  x:Name="txt_adres_2"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Email:"
                                                           Style="{StaticResource TextBlockStylePdf}"
                                                           TextAlignment="Right"
                                                           Padding="3"
                                                           Width="120"/>
                                            <TextBox  Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                          Style="{StaticResource TextBoxStyle1}"
                                                          Width="250"
                                                          Height="16"
                                                          Padding="2 0 0 0"
                                                          HorizontalAlignment="Left"
                                                          VerticalAlignment="Center"
                                                          Margin="4 0 0 0"
                                                          x:Name="txt_email"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Tel:"
                                                           Style="{StaticResource TextBlockStylePdf}"
                                                           TextAlignment="Right"
                                                           Padding="3"
                                                           Width="120"/>
                                            <TextBox  Text="{Binding Tel, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                          Style="{StaticResource TextBoxStyle1}"
                                                          Width="250"
                                                          Height="16"
                                                          Padding="2 0 0 0"
                                                          HorizontalAlignment="Left"
                                                          VerticalAlignment="Center"
                                                          Margin="4 0 0 0"
                                                          x:Name="txt_tel"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Vergi No:"
                                                           Style="{StaticResource TextBlockStylePdf}"
                                                           TextAlignment="Right"
                                                           Padding="3"
                                                           Width="120"/>
                                            <TextBox  Text="{Binding VergiNo, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                          Style="{StaticResource TextBoxStyle1}"
                                                          Width="250"
                                                          Height="16"
                                                          Padding="2 0 0 0"
                                                          HorizontalAlignment="Left"
                                                          VerticalAlignment="Center"
                                                          Margin="4 0 0 0"
                                                          x:Name="txt_vergi_no"/>
                                    </StackPanel>
                                </StackPanel>
                            <StackPanel Orientation="Vertical" Grid.Row="2"
                                                    Grid.Column="1"
                                                    Grid.ColumnSpan="2"
                                                    HorizontalAlignment="Right"
                                                    Margin="0 0 20 0"
                                                    VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Seri No:"
                                                           Style="{StaticResource TextBlockStylePdf}"
                                                           TextAlignment="Right"
                                                           Padding="3"
                                                           Width="100"/>
                                        <TextBox  Text="{Binding SirketAdi, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                          Style="{StaticResource TextBoxStyle1}"
                                                          Width="250"
                                                          Height="16"
                                                          Padding="2 0 0 0"
                                                          HorizontalAlignment="Left"
                                                          VerticalAlignment="Center"
                                                          Margin="4 0 0 0"
                                                          x:Name="txt_seri_no"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Sevk İrsaliyesi:"
                                                           Style="{StaticResource TextBlockStylePdf}"
                                                           TextAlignment="Right"
                                                           Padding="3"
                                                           Width="100"/>
                                        <TextBox  Text="{Binding Adres, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                                  Style="{StaticResource TextBoxStyle1}"
                                                                  Width="250"
                                                                  Height="16"
                                                                  Padding="2 0 0 0"
                                                                  HorizontalAlignment="Left"
                                                                  VerticalAlignment="Center"
                                                                  Margin="4 0 0 0"
                                                                  x:Name="txt_sevk_irsaliyesi"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Tanzim Tarihi:"
                                                           Style="{StaticResource TextBlockStylePdf}"
                                                           TextAlignment="Right"
                                                           Padding="3"
                                                           Width="100"/>
                                        <TextBox  Text="{Binding Adres2, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                          Style="{StaticResource TextBoxStyle1}"
                                                          Width="250"
                                                          Height="16"
                                                          Padding="2 0 0 0"
                                                          HorizontalAlignment="Left"
                                                          VerticalAlignment="Center"
                                                          Margin="4 0 0 0"
                                                          x:Name="txt_tanzim_tarihi"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Fiili Sevk Tarihi:"
                                                                   Style="{StaticResource TextBlockStylePdf}"
                                                                   TextAlignment="Right"
                                                                   Padding="3"
                                                                   Width="100"/>
                                        <TextBox  Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                                  Style="{StaticResource TextBoxStyle1}"
                                                                  Width="250"
                                                                  Height="16"
                                                                  Padding="2 0 0 0"
                                                                  HorizontalAlignment="Left"
                                                                  VerticalAlignment="Center"
                                                                  Margin="4 0 0 0"
                                                                  x:Name="txt_fiili_sevk_tarihi"/>
                                    </StackPanel>


                                </StackPanel>
                            <Border Background="{StaticResource b_r_four}" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"/>   
                            <DataGrid x:Name="dg_Irsaliye" DataContext="{StaticResource vm_Irsaliye}"
                                                  Grid.Row="4" Grid.ColumnSpan="3"
                                                  Style="{StaticResource DataGridStylewithBorder}"
                                                  CellStyle="{StaticResource DataGridCellStyle1}"
                                                  RowStyle="{StaticResource DataGridRowStyle1}"
                                                  ContextMenuOpening="DataGrid_ContextMenuOpening"
                                                  ItemsSource="{Binding IrsaliyeCollection}"
                                                  Padding="0"
                                                  Margin="0 0 0 0"
                                  
                                                  HorizontalContentAlignment="Center">
                                            <DataGrid.Resources>
                                                    <ContextMenu x:Key="DataGridContextMenu">
                                            <MenuItem Header="Excel Kaydet" Click="btn_excel_kaydet" />
                                        </ContextMenu>
                                            </DataGrid.Resources>

                                            <DataGrid.Columns>
                                                <DataGridTextColumn Width="30" Header="Sıra No" Binding="{Binding SiraNo}" />
                                                <DataGridTextColumn Width="70" Header="Ürün Kodu" Binding="{Binding UrunKodu}" />
                                                <DataGridTextColumn Width="100" Header="Ürün Adı" Binding="{Binding UrunAdi}" />
                                                <DataGridTextColumn Width="367" Header="Malın Cinsi / Rengi" Binding="{Binding MalinCinsiRengi}" />
                                                <DataGridTextColumn Width="43"  Header="Miktar" Binding="{Binding Miktar}">
                                                    <DataGridTextColumn.CellStyle>
                                                        <Style TargetType="DataGridCell">
                                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        </Style>
                                                    </DataGridTextColumn.CellStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Width="70" Header="Birim" Binding="{Binding Birim}" />
                                                <DataGridCheckBoxColumn  Width="20" Header="" Binding="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataGrid.Columns>

                                            <DataGrid.ColumnHeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Foreground" Value="#25274d"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="Margin" Value="0 5 0 5"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="FontSize" Value="10"/>
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <TextBlock TextWrapping="Wrap" Text="{Binding}" Margin="5"/>
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </DataGrid.ColumnHeaderStyle>
                        </DataGrid>
                            <Border Margin="0 20 0 20" Background="{StaticResource b_r_four}" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3"/>
                            <StackPanel Grid.Row="7" Grid.Column="0"
                                        Grid.ColumnSpan="3" Orientation="Horizontal"
                                        HorizontalAlignment="Left" VerticalAlignment="Top"
                                        Margin="0 10 0 30">
                                <StackPanel Orientation="Vertical"
                                            Margin="0 0 20 0"
                                        Grid.ColumnSpan="2"
                                            VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Sevk Ülkesi:"
                                                               Style="{StaticResource TextBlockStylePdf}"
                                                               TextAlignment="Right"
                                                               Padding="3"
                                                               Width="120"/>
                                        <TextBox  Text="{Binding SevkUlkesi, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                              Style="{StaticResource TextBoxStyle1}"
                                                              Width="250"
                                                              Height="16"
                                                              Padding="2 0 0 0"
                                                              HorizontalAlignment="Left"
                                                              VerticalAlignment="Center"
                                                              Margin="4 0 0 0"
                                                              x:Name="txt_sevk_ulkesi"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Şirket Adı:"
                                                               Style="{StaticResource TextBlockStylePdf}"
                                                               TextAlignment="Right"
                                                               Padding="3"
                                                               Width="120"/>
                                        <TextBox  Text="{Binding SirketAdi, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                                      Style="{StaticResource TextBoxStyle1}"
                                                                      Width="250"
                                                                      Height="16"
                                                                      Padding="2 0 0 0"
                                                                      HorizontalAlignment="Left"
                                                                      VerticalAlignment="Center"
                                                                      Margin="4 0 0 0"
                                                                      x:Name="txt_sirket_adi_2"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Adres:"
                                                       Style="{StaticResource TextBlockStylePdf}"
                                                       TextAlignment="Right"
                                                       Padding="3"
                                                       Width="120"/>
                                    <TextBox  Text="{Binding Adres, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                              Style="{StaticResource TextBoxStyle1}"
                                                              Width="250"
                                                              Height="16"
                                                              Padding="2 0 0 0"
                                                              HorizontalAlignment="Left"
                                                              VerticalAlignment="Center"
                                                              Margin="4 0 0 0"
                                                              x:Name="txt_adres2"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Satır 2:"
                                                       Style="{StaticResource TextBlockStylePdf}"
                                                       TextAlignment="Right"
                                                       Padding="3"
                                                       Width="120"/>
                                    <TextBox  Text="{Binding Adres2, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                      Style="{StaticResource TextBoxStyle1}"
                                                      Width="250"
                                                      Height="16"
                                                      Padding="2 0 0 0"
                                                      HorizontalAlignment="Left"
                                                      VerticalAlignment="Center"
                                                      Margin="4 0 0 0"
                                                      x:Name="txt_adres_2_2"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Email:"
                                                               Style="{StaticResource TextBlockStylePdf}"
                                                               TextAlignment="Right"
                                                               Padding="3"
                                                               Width="120"/>
                                    <TextBox  Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                              Style="{StaticResource TextBoxStyle1}"
                                                              Width="250"
                                                              Height="16"
                                                              Padding="2 0 0 0"
                                                              HorizontalAlignment="Left"
                                                              VerticalAlignment="Center"
                                                              Margin="4 0 0 0"
                                                              x:Name="txt_email2"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Tel:"
                                                               Style="{StaticResource TextBlockStylePdf}"
                                                               TextAlignment="Right"
                                                               Padding="3"
                                                               Width="120"/>
                                    <TextBox  Text="{Binding Tel, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                              Style="{StaticResource TextBoxStyle1}"
                                                              Width="250"
                                                              Height="16"
                                                              Padding="2 0 0 0"
                                                              HorizontalAlignment="Left"
                                                              VerticalAlignment="Center"
                                                              Margin="4 0 0 0"
                                                              x:Name="txt_tel2"/>
                                </StackPanel>


                            </StackPanel>
                                <StackPanel Orientation="Vertical"
                                                        Grid.Column="1"
                                                        Grid.ColumnSpan="2"
                                                        HorizontalAlignment="Right"
                                                        Margin="0 0 20 0"
                                                        VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="İsim:"
                                                               Style="{StaticResource TextBlockStylePdf}"
                                                               TextAlignment="Right"
                                                               Padding="3"
                                                               Width="120"/>
                                    <TextBox  Text="{Binding SoforIsım, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                              Style="{StaticResource TextBoxStyle1}"
                                                              Width="150"
                                                              Height="16"
                                                              Padding="2 0 0 0"
                                                              TextAlignment="Left"
                                                              VerticalAlignment="Center"
                                                              Margin="4 0 0 0"
                                                              x:Name="txt_sofor_isim"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Araç Plaka:"
                                                               Style="{StaticResource TextBlockStylePdf}"
                                                               TextAlignment="Right"
                                                               Padding="3"
                                                               Width="120"/>
                                    <TextBox  Text="{Binding AracPlaka, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                                      Style="{StaticResource TextBoxStyle1}"
                                                                      Width="100"
                                                                      Height="16"
                                                                      Padding="2 0 0 0"
                                                                      HorizontalAlignment="Left"
                                                                      VerticalAlignment="Center"
                                                                      Margin="4 0 0 0"
                                                                      x:Name="txt_arac_plaka"/>
                                    <TextBox  Text="{Binding AracPlaka2, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
