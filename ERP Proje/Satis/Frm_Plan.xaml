<Window x:Class="Layer_UI.Satis.frm_main_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Layer_Business;assembly=Layer_Business"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="CanMinimize"
        WindowState="Normal" MinWidth="1080" MinHeight="720"
        WindowStartupLocation="CenterOwner"
        MouseDown="mousedown_Window"
        xmlns:uc="clr-namespace:Layer_UI.UserControls"
        Background="Transparent"
        AllowsTransparency="True">
    <Window.Resources>
        <vm:PlanDurum x:Key="vm_Plan_Durum"/>
    </Window.Resources>
    <Border CornerRadius="50">
        <Border.Background>
            <SolidColorBrush Color="{StaticResource b_r_one_color}"></SolidColorBrush>
        </Border.Background>
        <Border CornerRadius="50"
            BorderThickness="2"
            Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource b_r_four_color}" Offset="0"/>
                    <GradientStop Color="{StaticResource b_r_four_contrast}" Offset="0.5"/>
                    <GradientStop Color="{StaticResource b_r_four_color}" Offset="1"/>

                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,1">
                    <GradientStop Color="{StaticResource b_r_one_color}" Offset="0"/>
                    <GradientStop Color="{StaticResource b_r_one_color_lighter}" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid Margin="30,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="55"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition/>
                    <RowDefinition Height="45"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="500"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>

                <uc:UserControl_Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                                     x:Name="menu_top_bar"
                                     Title="PLAN" />

                <WrapPanel Grid.Row="1" Margin="10 20 0 0" Grid.Column="0" Grid.ColumnSpan="2" x:Name="wrp_search_boxes" DataContext="{StaticResource vm_Plan_Durum}">
                    <TextBox Style="{StaticResource PillSearchBoxStyle}"
                                 Text="{Binding SearchBox1, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                 Margin="0 0 30 0"
                                 x:Name="txt_search_box1"/>
                    <TextBox Style="{StaticResource PillSearchBoxStyle}"
                                 Text="{Binding SearchBox2, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                 Margin="0 0 30 0"
                                 x:Name="txt_search_box2"/>
                    <TextBox Style="{StaticResource PillSearchBoxStyle}"
                                 Text="{Binding SearchBox3, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                 Margin="0 0 30 0"
                                 x:Name="txt_search_box3"/>
                    <TextBox Style="{StaticResource PillSearchBoxStyle}"
                                 Text="{Binding SearchBox4,Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                 x:Name="txt_search_box4"/>
                    <CheckBox Style="{StaticResource CheckBoxStyle1}"
                                 Content="Kapalı Sipariş Gösterme"
                              IsChecked="True"
                              Margin="30 0 0 0"
                                 x:Name="cbx_siparis_durum"/>
                    <TextBlock Text="Kapalı Sipariş Gösterme"
                               Style="{StaticResource TextBlockStyleMid}"
                               FontSize="14"
                               Margin="10 0 0 0"/>
                    <Button Click="btn_search_clicked" 
                            Width="70"
                            Content="Listele"
                            Cursor="Hand"
                            Margin="15 5 0 5"/>
                    <Button Click="btn_download_excel" 
                            Width="70"
                            Background="GreenYellow"
                            FontWeight="Bold"
                            Content="Excel"
                            Cursor="Hand"
                            Margin="15 5 0 5"/>
                </WrapPanel>
      
                
                <DataGrid x:Name="dg_Plan_Durum" DataContext="{StaticResource vm_Plan_Durum}"
                          Grid.Row="3" Grid.ColumnSpan="2"
                          Style="{StaticResource DataGridStyle1}"
                          CellStyle="{StaticResource DataGridCellStyle1}"
                          RowStyle="{StaticResource DataGridRowStyle1}"
                          
                          ItemsSource="{Binding PlanDurumCollection}"
                          >

                    <DataGrid.Columns>
                        <!--<DataGridCheckBoxColumn  Width="20" Header="" Binding="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>-->
                        <DataGridTextColumn Width="90" Header="Sip Tarih" Binding="{Binding SiparisTarih}" />
                        <!--sipariş no-->
                        <DataGridTemplateColumn >
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Sipariş No"  />
                                        <Button Tag="Sipariş No"  Content="🔍" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top" Foreground="BlueViolet" Click="Filter_Click" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding SiparisNo}" BorderBrush="Transparent" Background="Transparent" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!--sipariş sıra-->
                        <DataGridTemplateColumn Width="90" >
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Sip S." Width="30" HorizontalAlignment="Center" TextAlignment="Center"/>
                                        <Button Tag="Sip S." Content="🔍" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top" Foreground="BlueViolet" Click="Filter_Click" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding SiparisSira}" Width="30" BorderBrush="Transparent" Background="Transparent"  />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                </Style>
                            </DataGridTemplateColumn.CellStyle>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Width="90" Header="Sip Durum" Binding="{Binding SiparisDurum}" />
                        <!--Sat C Kod-->
                        <DataGridTemplateColumn >
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Sat C Kod" />
                                        <Button Tag="Sat C Kod" Content="🔍" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top" Foreground="BlueViolet" Click="Filter_Click" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding SatisCariKod}" BorderBrush="Transparent" Background="Transparent" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!--Sat C Isim-->
                        <DataGridTemplateColumn >
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Sat C Isim" />
                                        <Button Tag="Sat C Isim" Content="🔍" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top" Foreground="BlueViolet" Click="Filter_Click" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding SatisCariIsim}" Width="110" BorderBrush="Transparent" Background="Transparent" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!--Tes C Kod-->
                        <DataGridTemplateColumn >
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Tes C Kod" />
                                        <Button Tag="Tes C Kod" Content="🔍" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top" Foreground="BlueViolet" Click="Filter_Click" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding CariKod}" BorderBrush="Transparent" Background="Transparent"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!--Tes C İsim-->
                        <DataGridTemplateColumn >
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Tes C Isim" />
                                        <Button Tag="Tes C Isim" Content="🔍" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top" Foreground="BlueViolet" Click="Filter_Click" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding CariIsim}" Width="180" BorderBrush="Transparent" Background="Transparent"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!--Destinasyon-->
                        <DataGridTemplateColumn >
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Destinasyon" />
                                        <Button Tag="Destinasyon" Content="🔍" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top" Foreground="BlueViolet" Click="Filter_Click" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Destinasyon}" Width="100" BorderBrush="Transparent" Background="Transparent"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!--PO-->
                        <DataGridTemplateColumn >
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="PO" Width="90" TextAlignment="Center"/>
                                        <Button Tag="PO" Content="🔍" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top" Foreground="BlueViolet" Click="Filter_Click" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding PO}" Width="100" BorderBrush="Transparent" Background="Transparent"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!--Plan Adi-->
                        <DataGridTemplateColumn >
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Plan Adi" Width="90" TextAlignment="Center"/>
                                        <Button Tag="Plan Adi" Content="🔍" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top" Foreground="BlueViolet" Click="Filter_Click" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding PlanAdi}" Width="90" BorderBrush="Transparent" Background="Transparent"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!--Plan No-->
                        <DataGridTemplateColumn >
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Plan No" Width="70" TextAlignment="Center"/>
                                        <Button Tag="Plan No" Content="🔍" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top" Foreground="BlueViolet" Click="Filter_Click" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding PlanNo}" Width="90" BorderBrush="Transparent" Background="Transparent"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!--Takip No-->
                        <DataGridTemplateColumn >
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Takip No" Width="70" TextAlignment="Center"/>
                                        <Button Tag="Takip No" Content="🔍" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top" Foreground="BlueViolet" Click="Filter_Click" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding TakipNo}" Width="70" BorderBrush="Transparent" Background="Transparent"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!--Refisemri-->
                        <DataGridTemplateColumn >
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Ref Ie" Width="90" TextAlignment="Center"/>
                                        <Button Tag="Ref Ie" Content="🔍" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top" Foreground="BlueViolet" Click="Filter_Click" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding ReferansIsemri}" Width="90" BorderBrush="Transparent" Background="Transparent"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!--Ürün Kodu-->
                        <DataGridTemplateColumn >
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Ürün Kodu" Width="80" TextAlignment="Center"/>
                                        <Button Tag="Ürün Kodu"  Content="🔍" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top" Foreground="BlueViolet" Click="Filter_Click" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding UrunKodu}" Width="120" BorderBrush="Transparent" Background="Transparent"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!--Ürün Adı-->
                        <DataGridTemplateColumn >
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Ürün Adı" Width="150" TextAlignment="Center"/>
                                        <Button Tag="Ürün Adı" Content="🔍" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top" Foreground="BlueViolet" Click="Filter_Click" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding UrunAdi}" Width="180" BorderBrush="Transparent" Background="Transparent"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>

                            <DataGridTemplateColumn.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                    <Setter Property="HorizontalAlignment" Value="Left" />
                                    <Setter Property="Background" Value="Transparent" />

                                    <Setter Property="ContextMenu">
                                        <Setter.Value>
                                            <ContextMenu>
                                                <MenuItem Header="Kes" Command="ApplicationCommands.Cut" />
                                                <MenuItem Header="Kopyala" Command="ApplicationCommands.Copy" />
                                                <MenuItem Header="Yapıştır" Command="ApplicationCommands.Paste"/>
                                            </ContextMenu>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGridTemplateColumn.CellStyle>
                        </DataGridTemplateColumn>
                        <!--Durum-->
                        <DataGridTemplateColumn >
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Durum" Width="60" TextAlignment="Center"/>
                                        <Button Tag="Durum" Content="🔍" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top" Foreground="BlueViolet" Click="Filter_Click" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Durum}" BorderBrush="Transparent" Background="Transparent"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Width="60" Header="Termin Tarih" Binding="{Binding IhtiyacDuyulanTarih}" />
                        <DataGridTextColumn Width="60" Header="Planlanan Tarih" Binding="{Binding PlanlananTarih}" />
                        <DataGridTextColumn Width="60" Header="Aciklama" Binding="{Binding PlanlamaAciklama}" />
                        <DataGridTextColumn Width="60" CellStyle="{StaticResource DataGridCellStyle1_Center}" Header="Urun Miktar" Binding="{Binding UrunMiktar}" />
                        <DataGridTextColumn Width="70" CellStyle="{StaticResource DataGridCellStyle1_Center}" Header="Paket Adet" Binding="{Binding PaketAdet}" />
                        <DataGridTextColumn Width="70" CellStyle="{StaticResource DataGridCellStyle1_Center}" Header="Toplam Paket" Binding="{Binding ToplamPaket}" />
                        <DataGridTextColumn Width="70" CellStyle="{StaticResource DataGridCellStyle1_Center}" Header="Kalan Paket" Binding="{Binding KalanPaket}" />
                        <DataGridTextColumn Width="70" CellStyle="{StaticResource DataGridCellStyle1_Center}" Header="Mamul Stok" Binding="{Binding MamulStok}" />
                        <DataGridTextColumn Width="70" CellStyle="{StaticResource DataGridCellStyle1_Center}" Header="Sevk Miktar" Binding="{Binding SevkMiktar}" />
                        <DataGridTextColumn Width="70" CellStyle="{StaticResource DataGridCellStyle1_Center}" Header="Paket Stok" Binding="{Binding PaketStok}" />
                        <DataGridTextColumn Width="70" CellStyle="{StaticResource DataGridCellStyle1_Center}" Header="Doseme Ie Mik" Binding="{Binding DosemeIeMik}" />
                        <DataGridTextColumn Width="70" CellStyle="{StaticResource DataGridCellStyle1_Center}" Header="Doseme Urs Mik" Binding="{Binding DosemeUrsMik}" />
                        <DataGridTextColumn Width="70" CellStyle="{StaticResource DataGridCellStyle1_Center}" Header="Konfeksiyon Ie Mik" Binding="{Binding KonfeksiyonIeMik}" />
                        <DataGridTextColumn Width="70" CellStyle="{StaticResource DataGridCellStyle1_Center}" Header="Konfeksiyon Urs Mik" Binding="{Binding KonfeksiyonUrsMik}" />
                        <DataGridTextColumn Width="70" CellStyle="{StaticResource DataGridCellStyle1_Center}" Header="Kumas Ie Mik" Binding="{Binding KumasIeMik}" />
                        <DataGridTextColumn Width="70" CellStyle="{StaticResource DataGridCellStyle1_Center}" Header="Kumas Urs Mik" Binding="{Binding KumasUrsMik}" />
                        <DataGridTextColumn Width="70" CellStyle="{StaticResource DataGridCellStyle1_Center}" Header="Plaka Ie Mik" Binding="{Binding PlakaIeMik}" />
                        <DataGridTextColumn Width="70" CellStyle="{StaticResource DataGridCellStyle1_Center}" Header="Plaka Urs Mik" Binding="{Binding PlakaUrsMik}" />
                        <DataGridTextColumn Width="70" CellStyle="{StaticResource DataGridCellStyle1_Center}" Header="Iskelet Ie Mik" Binding="{Binding IskeletIeMik}" />
                        <DataGridTextColumn Width="70" CellStyle="{StaticResource DataGridCellStyle1_Center}" Header="Iskelet Urs Mik" Binding="{Binding IskeletUrsMik}" />
                        <DataGridTextColumn Width="70" CellStyle="{StaticResource DataGridCellStyle1_Center}" Header="KBandi Ie Mik" Binding="{Binding KBandiIeMik}" />
                        <DataGridTextColumn Width="70" CellStyle="{StaticResource DataGridCellStyle1_Center}" Header="KBandi Urs Mik" Binding="{Binding KBandiUrsMik}" />
                    </DataGrid.Columns>

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#25274d"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Margin" Value="0 5 0 5"/>
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock TextWrapping="Wrap" Text="{Binding}" Margin="5"/>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                </DataGrid>

                <StackPanel Background="{StaticResource b_r_five}" Grid.Row="4" Grid.Column="0"
                            Orientation="Horizontal"  Grid.ColumnSpan="2" Opacity=".95" 
                            VerticalAlignment="Center" HorizontalAlignment="Right" DataContext="{StaticResource vm_Plan_Durum}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        
                    <TextBlock Text="Filtreleri Temizle" 
                               VerticalAlignment="Center"
                               Style="{StaticResource TextBlockPaginationStyle1}"
                               Margin="10 0 0 0"></TextBlock>
                    <Button Click="btn_clear_filter_clicked"
                             Margin="5 0 0 0"
                             Style="{StaticResource ButtonStyleDataGridUpdateImage24_24}"/>

                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Margin="50 0 0 0" Text="Her Sayfada" Style="{StaticResource TextBlockPaginationStyle1}" Padding="10 0 5 0"/>
                        <Grid x:Name="grd_selected_number">
                            <ComboBox SelectedItem="{Binding SelectedRecord,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                      Margin="5"
                                      SelectionChanged="cmb_selected_record_changed">
                                <ComboBoxItem Content="10"/>
                                <ComboBoxItem Content="25"/>
                                <ComboBoxItem Content="50"/>
                                <ComboBoxItem Content="100"/>
                                <ComboBoxItem Content="250"/>
                                <ComboBoxItem Content="500"/>
                            </ComboBox>
                        </Grid>
                        <TextBlock Text="Sipariş" Style="{StaticResource TextBlockPaginationStyle1}" Padding="5 0 20 0"/>
                        <Grid Margin="50 0 0 0" x:Name="grd_prev_buttons">
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="btn_pag_first" Click="btn_paging_clicked" 
                                    Style="{StaticResource ButtonItemControlStyle}" 
                                    IsEnabled="{Binding IsFirstEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Content="&lt;&lt;" Margin="5 5 10 5"/>
                                <Button x:Name="btn_pag_previous" Click="btn_paging_clicked" 
                                    Style="{StaticResource ButtonItemControlStyle}" 
                                    IsEnabled="{Binding IsPreviousEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Content="&lt;" Margin="5"/>
                            </StackPanel>
                        </Grid>
                        <Grid x:Name="grd_page_numbers">
                            <StackPanel Orientation="Horizontal">

                                <TextBlock Style="{StaticResource TextBlockPaginationStyle1}" VerticalAlignment="Center">
                                    <TextBlock.Text>
                                        <Binding Path="CurrentPage" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"/>
                                    </TextBlock.Text>
                                </TextBlock>
                            
                                <TextBlock Style="{StaticResource TextBlockPaginationStyle1}" Text="/">
                                </TextBlock>
                                <TextBlock Style="{StaticResource TextBlockPaginationStyle1}">
                                    <TextBlock.Text>
                                        <Binding Path="NumberOfPages" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"/>
                                    </TextBlock.Text>
                                </TextBlock>

                            </StackPanel>
                        </Grid >
                        <Grid x:Name="grd_next_buttons">
                            <StackPanel Orientation="Horizontal">
                        <Button x:Name="btn_pag_next" Click="btn_paging_clicked" Style="{StaticResource ButtonItemControlStyle}" 
                                IsEnabled="{Binding IsNextEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                Content=">" Margin="5"/>
                        <Button x:Name="btn_pag_last" Click="btn_paging_clicked" Style="{StaticResource ButtonItemControlStyle}" 
                                IsEnabled="{Binding IsLastEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                Content=">>" Margin="5"/>
                            </StackPanel>
                        </Grid>
                        <Grid x:Name="grd_Total_Numbers_Count">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource TextBlockPaginationStyle1}" 
                                       Padding="15 0 5 0" 
                                       Text="{Binding NumberOfRows, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Style="{StaticResource TextBlockPaginationStyle1}" 
                                       Padding="0 0 15 0" Text="adet sonuç"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </StackPanel>
                <!--sipno-->
                <Popup x:Name="FilterPopupSipNo" Placement="Mouse" StaysOpen="False">
                    <Border Background="White" BorderBrush="Black" BorderThickness="1">
                        <StackPanel>
                            <TextBox Visibility="Collapsed" x:Name="txt_header_sip_no"></TextBox>
                            <TextBox x:Name="FilterTextBox_sip_no" Width="100" KeyDown="FilterTextBox_KeyDown"/>
                         </StackPanel>
                    </Border>
                </Popup>
                <!--sipsira-->
                <Popup x:Name="FilterPopupSipSira" Placement="Mouse" StaysOpen="False">
                    <Border Background="White" BorderBrush="Black" BorderThickness="1">
                        <StackPanel>
                            <TextBox Visibility="Collapsed" x:Name="txt_header_sip_sira"></TextBox>
                            <TextBox x:Name="FilterTextBox_sip_sira" Width="100" KeyDown="FilterTextBox_KeyDown"/>
                         </StackPanel>
                    </Border>
                </Popup>
                <!--satcari-->
                <Popup x:Name="FilterPopupSatCari" Placement="Mouse" StaysOpen="False">
                    <Border Background="White" BorderBrush="Black" BorderThickness="1">
                        <StackPanel>
                            <TextBox Visibility="Collapsed" x:Name="txt_header_sat_cari"></TextBox>
                            <TextBox x:Name="FilterTextBox_sat_cari" Width="100" KeyDown="FilterTextBox_KeyDown"/>
                         </StackPanel>
                    </Border>
                </Popup>
                <!--satcariisim-->
                <Popup x:Name="FilterPopupSatCariIsim" Placement="Mouse" StaysOpen="False">
                    <Border Background="White" BorderBrush="Black" BorderThickness="1">
                        <StackPanel>
                            <TextBox Visibility="Collapsed" x:Name="txt_header_sat_cari_isim"></TextBox>
                            <TextBox x:Name="FilterTextBox_sat_cari_isim" Width="100" KeyDown="FilterTextBox_KeyDown"/>
                         </StackPanel>
                    </Border>
