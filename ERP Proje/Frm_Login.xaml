<Window x:Class="Layer_UI.Frm_Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layer_UI"
        xmlns:vm="clr-namespace:Layer_Business;assembly=Layer_Business"
        mc:Ignorable="d"
        Title="Kullanıcı Girişi" Height="500" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="mousedown_Window"
        Background="Transparent"
        AllowsTransparency="True">
    <Window.Resources>
        <vm:LoginLogic x:Key="vm_Login_Logic"/>
    </Window.Resources>
    <Border CornerRadius="50">
        <Border.Background>
            <SolidColorBrush Color="{StaticResource b_r_one_color}"></SolidColorBrush>
        </Border.Background>
    <Border CornerRadius="50"
            BorderThickness="2"
            Opacity="0.95">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource b_r_four_color}" Offset="0"/>
                    <GradientStop Color="{StaticResource b_r_four_contrast}" Offset="0.5"/>
                <GradientStop Color="{StaticResource b_r_four_color}" Offset="1"/>

            </LinearGradientBrush>
        </Border.BorderBrush>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,1">
                <GradientStop Color="{StaticResource b_r_one_color}" Offset="0"/>
                <GradientStop Color="{StaticResource b_r_one_color_lighter}" Offset="0.75"/>
            </LinearGradientBrush>
        </Border.Background>
            <Grid Margin="30,5" DataContext="{StaticResource vm_Login_Logic}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                Text="GİRİŞ"
                Foreground="{StaticResource b_r_three}"
                FontSize="12"
                FontFamily="Montserrat"
                FontWeight="Bold"
                Grid.Column="0"
                VerticalAlignment="Center"
                Margin="10,0,0,0"/>
                <Button x:Name="btn_minimize"
                        BorderThickness="0"
                        FontFamily="Montserrat"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Grid.Column="1"
                        Content="-"
                        Click="btn_minimize_click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource b_r_four}"/>
                            <Setter Property="Foreground" Value="{StaticResource b_r_three}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource b_r_four_darker}"/>
                                    <Setter Property="Foreground" Value="{StaticResource b_r_three_lighter}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18" Height="18"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>

                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="btn_close"
                        FontFamily="Montserrat"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Grid.Column="2"
                        Content="x"
                        Click="btn_close_click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource b_r_red}"/>
                            <Setter Property="Foreground" Value="{StaticResource b_r_three}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource b_r_red_darker}"/>
                                    <Setter Property="Foreground" Value="{StaticResource b_r_three_lighter}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        </Button.Style>
                        <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18" Height="18"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>

                            </Border>
                        </ControlTemplate>
                        </Button.Template>
                </Button>
                <StackPanel Width="250"
                            Grid.Row="2"
                            Orientation="Vertical"
                            Margin="55,35,0,0"
                            >

                    <Image Source="Resources/Images/vb.png" Width="100" Height="100"/>
                    <TextBlock Text="Vita Bianca"
                               FontSize="20"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               HorizontalAlignment="Center"
                               Background="Transparent"
                               Foreground="{StaticResource b_r_three_lighter}"
                               Margin="0,11,0,0"/>
                    <TextBlock Text="Kullanıcı"
                               FontSize="13"
                               FontWeight="Bold"
                               FontFamily="Montserrat"
                               HorizontalAlignment="Left"
                               Background="Transparent"
                               Foreground="{StaticResource b_r_three}"
                               Margin="0,20,0,0"/>
                    <TextBox x:Name="txt_user_name"
                             FontWeight="Bold"
                             FontFamily="Montserrat"
                             HorizontalAlignment="Left"
                             Foreground="{StaticResource b_r_three}"
                             CaretBrush="{StaticResource b_r_five}"
                             BorderBrush="{StaticResource b_r_five}"
                             BorderThickness="0,0,0,2"
                             FontSize="13"
                             Height="16"
                             Width="250"
                             VerticalContentAlignment="Center"
                             Margin="0,10,0,0"
                             Padding="20,0,0,0"
                             SnapsToDevicePixels="True">
                        <TextBox.Background>
                            <SolidColorBrush Color="{StaticResource b_r_one_color_lighter}"></SolidColorBrush>
                        </TextBox.Background>
                    </TextBox>
                    <TextBlock Text="Şifre"
                               FontSize="13"
                               FontWeight="Bold"
                               FontFamily="Montserrat"
                               HorizontalAlignment="Left"
                               Background="Transparent"
                               Foreground="{StaticResource b_r_three}"
                               Margin="0,20,0,0"/>
                    <PasswordBox x:Name="txt_password"
                             FontWeight="Bold"
                             FontFamily="Montserrat"
                             HorizontalAlignment="Left"
                             Foreground="{StaticResource b_r_three}"
                             CaretBrush="{StaticResource b_r_five}"
                             BorderBrush="{StaticResource b_r_five}"
                             BorderThickness="0,0,0,2"
                             FontSize="13"
                             Height="16"
                             Width="250"
                             VerticalContentAlignment="Center"
                             Margin="0,10,0,0"
                             Padding="20,0,0,0"
                             SnapsToDevicePixels="True">
                        <PasswordBox.Background>
                            <ImageBrush ImageSource="Resources/Images/password.png"
                                        Stretch="Uniform"
                                        AlignmentX="Left"/>
                        </PasswordBox.Background>
                    </PasswordBox>
                    <Button x:Name="btn_giris"
                        BorderThickness="0"
                        FontFamily="Montserrat"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Grid.Column="2"
                        Content="Giriş"
                        Click="btn_login_click"
                        Margin="0,15,0,0">
                        
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource b_r_four}"/>
                                <Setter Property="Foreground" Value="{StaticResource b_r_three}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource b_r_four_darker}"/>
                                        <Setter Property="Foreground" Value="{StaticResource b_r_three_lighter}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="100" Height="22"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>

                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <StackPanel Orientation="Horizontal" Margin="0,18,0,0">
                        <CheckBox x:Name="cb_auto_login"
                                  BorderThickness="1.5"
                                  Cursor="Hand"
                                  IsChecked="{Binding IsCheckedAutoLogin}">    
                            <CheckBox.Style>
                                <Style TargetType="CheckBox">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{StaticResource b_r_three}"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource b_r_four_darker}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="CheckBox">
                                                <Grid Width="15" Height="15">
                                                    <Border BorderThickness="{TemplateBinding BorderThickness}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            Background="{TemplateBinding Background}">      
                                                        <Grid>
                                                            <Ellipse x:Name="ellipse" Fill="{StaticResource b_r_four}" Width="10" Height="10" Visibility="Collapsed"/>
                                                        </Grid>
                                                    </Border>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="ellipse" Property="Visibility" Value="Visible"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="Foreground" Value="{StaticResource b_r_three_lighter}"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource b_r_four}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </CheckBox.Style>
                        </CheckBox>
                        <TextBlock FontSize="13"
                                 FontWeight="Bold"
                                 FontFamily="Montserrat"
                                 VerticalAlignment="Bottom"
                                 Padding="10,2,0,0"
                                 Text="Oturumu Açık Tut">
                            <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource b_r_three}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{StaticResource b_r_three_lighter}"/>
                                    </Trigger>
                                </Style.Triggers>

                            </Style>
                            </TextBlock.Style>

                        </TextBlock>
                    </StackPanel>
                    <Button Content="Şifremi Unuttum"
                               HorizontalAlignment="Left"
                               Margin="0,10,0,0"
                               Style="{StaticResource ButtonStyleTransperentPlainText13bold}"
                               Click="btn_sifremi_unuttum_clicked"/>

                    <Button Content="İlk Kayıt"
                               HorizontalAlignment="Left"
                               Margin="0,10,0,0"
                               Style="{StaticResource ButtonStyleTransperentPlainText13bold}"
                                Click="btn_ilk_kayit_clicked"/>

                </StackPanel>
              
            </Grid>
        </Border>
    </Border>

</Window>
